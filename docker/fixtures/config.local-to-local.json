{
    "log_level": "DEBUG",
    "media_managers": [
        {
            "type": "radarr",
            "host": "http://radarr",
            "port": 7878,
            "api_key": "PLACEHOLDER_RADARR_API_KEY"
        },
        {
            "type": "sonarr",
            "host": "http://sonarr",
            "port": 8989,
            "api_key": "PLACEHOLDER_SONARR_API_KEY"
        }
    ],
    "download_clients": {
        "source-deluge": {
            "type": "deluge",
            "connection_type": "rpc",
            "host": "deluge-source",
            "port": 58846,
            "username": "localclient",
            "password": "testpassword"
        },
        "target-deluge": {
            "type": "deluge",
            "connection_type": "rpc",
            "host": "deluge-target",
            "port": 58846,
            "username": "localclient",
            "password": "testpassword"
        }
    },
    "connections": {
        "source-deluge -> target-deluge": {
            "from": "source-deluge",
            "to": "target-deluge",
            "transfer_config": {
                "from": {
                    "type": "local"
                },
                "to": {
                    "type": "local"
                }
            },
            "source_dot_torrent_path": "/source-state/",
            "source_torrent_download_path": "/source-downloads/",
            "destination_dot_torrent_tmp_dir": "/target-downloads/.torrents/",
            "destination_torrent_download_path": "/target-downloads/"
        }
    }
}
